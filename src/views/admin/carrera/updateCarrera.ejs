<%- include('../../global/header.ejs') %>
<div class="container py-5" style="max-width: 360px;">
  <form>
    <div class="form-group">
      <label for="carrera">Carrera:</label>
      <select id="carrera" name="carrera" class="form-control">
        <% data.forEach(carrera => { %>
        <option value="<%= carrera.dataValues.id %>"
          ><%= carrera.dataValues.nombre %></option
        >
        <% }) %>
      </select>
    </div>

    <div class="form-group">
      <label for="nombre">Nombre:</label>
      <input
        type="text"
        id="nombre"
        name="nombre"
        class="form-control"
        required
      />
    </div>

    <div class="form-check">
      <input
        type="radio"
        id="semestral"
        name="periodo"
        value="semestral"
        class="form-check-input"
      />
      <label class="form-check-label" for="semestral">Semestral</label>
    </div>

    <div class="form-check">
      <input
        type="radio"
        id="anual"
        name="periodo"
        value="anual"
        class="form-check-input"
      />
      <label class="form-check-label" for="anual">Anual</label>
    </div>

    <div class="form-check">
      <input
        type="checkbox"
        id="estado"
        name="estado"
        class="form-check-input"
      />
      <label class="form-check-label" for="estado">Estado (is active)</label>
    </div>

    <div class="form-group">
      <label for="facultad">Facultad:</label>
      <%- include("./components/facultades.ejs") %>
    </div>

    <button type="submit" class="btn btn-primary mt-3">
      Actualizar Carrera
    </button>
  </form>
</div>

<script>
  document.querySelector("form").addEventListener("submit", function (event) {
    event.preventDefault();

    const formData = new FormData(event.target);
    const data = Object.fromEntries(formData.entries());

    const token = localStorage.getItem("token");

    console.log(data)

    fetch(`/admin/carrera/update-carrera/${data.carrera}`, {
      method: "PUT",
      headers: {
        "Content-Type": "application/json",
        Authorization: `Bearer ${token}`,
      },
      body: JSON.stringify(data),
    })
      .then((response) => response.json())
      .then((data) => console.log(data))
      .catch((error) => {
        console.error("Error:", error);
      });
  });
</script>
